{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",

    "lib": ["ES2020"],
    "types": ["node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,        // ðŸ‘ˆ keep import specifiers exactly as written (preserves .js)

    "declaration": true,
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src"]
}
