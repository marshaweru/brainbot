{
  "name": "@brainbot/bot",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && node scripts/copy-assets.cjs",
    "start": "node --enable-source-maps dist/index.js",
    "dev": "concurrently -k \"tsc -w -p tsconfig.json\" \"nodemon -q dist/index.js\"",
    "dev:clean": "rimraf dist && pnpm build && pnpm start"
  },
  "dependencies": {
    "@brainbot/shared": "file:../../packages/shared",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "mongodb": "^6.6.2",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "telegraf": "^4.16.3",
    "undici": "^7.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.19.11",
    "concurrently": "^9.2.1",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.18"
  }
}
